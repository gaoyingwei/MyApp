<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
   <style name="push_style">
		<item name="android:hint">@string/style_hint</item>
		<item name="android:inputType">number</item>
		<item name="android:textSize">14sp</item>
	</style>
	<style name="push_alias">
		<item name="android:hint">@string/alias_hint</item>
		<item name="android:textSize">14sp</item>
	</style>
	<style name="push_mobilenumber">
		<item name="android:hint">@string/mobilenumber_hint</item>
		<item name="android:textSize">14sp</item>
	</style>
	<style name="push_tag">
		<item name="android:hint">@string/tag_hint</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="LoadingDialog" parent="@android:style/Theme.Holo.Dialog.NoActionBar">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:backgroundDimEnabled">false</item>
	</style>



	<style name="AccountTextStyle">

		<item name="android:textColor">@color/qq_white</item>

		<item name="android:textSize">20sp</item>
		<!--最多显示1行-->
		<item name="android:maxLines">1</item>
		<!--垂直滚动条-->
		<item name="android:scrollbars">vertical</item>
		<!--单行?-->
		<item name="android:singleLine">true</item>
	</style>

	<!--自定义EditText的下划线-->
	<style name="Theme.Custom.Control.EditText" parent="Theme.AppCompat.Light">
		<!--EditText未被激活时的下划线颜色-->
		<item name="colorControlNormal">@color/transparent</item>
		<!--EditText激活时的下划线颜色-->
		<item name="colorControlActivated">@color/transparent</item>
	</style>
	<style name="LoginEditTextTheme" parent="AccountTextStyle">

		<item name="android:textColorHint">@color/gainsboro</item>
		<!--光标颜色-->
		<item name="android:textCursorDrawable">@drawable/cursor</item>
		<item name="android:theme">@style/Theme.Custom.Control.EditText</item>
		<!--下划线颜色-->
		<!--选中文本的背景颜色-->
		<item name="android:textColorHighlight">@color/holo_blue_light</item>
		<!--<item name="android:textSelectHandle">@color/alpha90_green</item>-->
		<!--行间距 默认间距的倍数-->
		<!--android:lineSpacingMultiplier="20"-->
		<!--行间距 固定值-->
		<!--<item name="android:lineSpacingExtra">10dp</item>-->
	</style>

	<!--textView默认不获取焦点，所以点击不起作用-->
	<style name="ClickableTextView">
		<item name="android:textColor">@drawable/bg_hypertext</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
	</style>
	<!--设置tabLayout字体大小-->
	<style name="MyCustomTabTextAppearance">
		<item name="android:textSize">17sp</item>
	</style>


	<style name="TabLayoutTextStyle">
		<item name="android:textSize">14sp</item>
	</style>

	<style name="Dialog" parent="@android:style/Theme.Dialog">
		<item name="android:windowFrame">@null</item>
		<!--边框-->
		<item name="android:windowIsFloating">true</item>
		<!--是否浮现在activity之上-->
		<item name="android:windowIsTranslucent">false</item>
		<!--半透明-->
		<item name="android:windowNoTitle">true</item>
		<!--无标题-->
		<item name="android:windowBackground">@android:color/transparent</item>
		<!--背景透明-->
		<item name="android:backgroundDimEnabled">true</item>
		<!--模糊-->
	</style>

	<style name="PickerAnim" parent="@android:style/Animation">
		<item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
		<item name="android:windowExitAnimation">@anim/push_bottom_out</item>
	</style>


</resources>